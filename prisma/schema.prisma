datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Deck {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  cards  Card[]
}

model Card {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  front  String
  back   String
  deckId String @db.ObjectId
  deck   Deck   @relation(fields: [deckId], references: [id])
}
